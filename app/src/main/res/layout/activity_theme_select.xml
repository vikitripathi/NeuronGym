                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="12:00PM"
                    android:textSize="9sp"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
